generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  mobile    String   @unique
  userType  UserType @default(USER)
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EBook {
  id           String   @id @default(uuid())
  title        String
  url          String
  desscription String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Lead {
  id        String   @id @default(uuid())
  name      String?
  mobile    String   @unique
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id           String   @id @default(uuid())
  title        String
  reviewBy     String
  mobile       String?
  rating       Int
  desscription String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum UserType {
  ADMIN
  USER
}
